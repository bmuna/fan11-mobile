<?xml version="1.0" encoding="utf-8"?><!-- Create by mohit.soni @ 07-Oct-19 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:id="@+id/rl_full_address_upload_id"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/light_grey">

                    <ImageView
                        android:id="@+id/iv_full_address_upload_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/camera_edit"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="7dp"/>

                    <TextView
                        android:id="@+id/tv_full_address_upload_id"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rectangle_out_border_black"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="@string/upload_id" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_full_address_upload_signature"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/light_grey">

                    <ImageView
                        android:id="@+id/iv_full_address_upload_signature"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/camera_edit"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="7dp"/>
                    <TextView
                        android:id="@+id/tv_full_address_upload_signature"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rectangle_out_border_black"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="@string/upload_signature" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_full_address_address_change"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangle_out_border_black"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="@string/change" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="@string/address" />

                        <EditText
                            android:id="@+id/et_full_address_address"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight=".7"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_full_address_country_change"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangle_out_border_black"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="@string/change" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="@string/country" />

                        <EditText
                            android:id="@+id/et_full_address_country"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight=".7"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_full_address_state_change"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangle_out_border_black"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="@string/change" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="@string/state" />

                        <EditText
                            android:id="@+id/et_full_address_state"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight=".7"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_full_address_city_change"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangle_out_border_black"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="@string/change" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="@string/city" />

                        <EditText
                            android:id="@+id/et_full_address_city"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight=".7"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_full_address_pincode_change"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangle_out_border_black"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="center"
                        android:text="@string/change" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="@string/pincode" />

                        <EditText
                            android:id="@+id/et_full_address_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight=".7"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:inputType="number"
                            android:maxLength="9"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>