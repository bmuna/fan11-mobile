<?xml version="1.0" encoding="utf-8"?><!-- Create by mohit.soni @ 20-Oct-19 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_team_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ground_back"
                android:orientation="vertical"
                android:weightSum="4">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">

                    <TextView
                        android:id="@+id/tv_point"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20sp"
                        android:background="@drawable/round_button_yellow"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="-10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="20sp"
                        android:background="@drawable/round_button_yellow"
                        android:gravity="center"
                        android:padding="7dp"
                        android:layout_alignParentRight="true" >
<!--                        <ImageView-->
<!--                        android:id="@+id/iv_point_refresh"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:src="@drawable/ic_refresh_24dp"/>-->
                        <TextView
                            android:id="@+id/iv_point_refresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>

