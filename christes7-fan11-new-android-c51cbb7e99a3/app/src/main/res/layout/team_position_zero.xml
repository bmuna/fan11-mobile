<?xml version="1.0" encoding="utf-8"?><!-- created by mohit.soni @ 10-11-2019-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/ll_team_position_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">
        <ImageView
            android:id="@+id/iv_team_position_icon_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_weight=".5"
            android:src="@drawable/shirt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:background="@drawable/player_detail_back"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_team_position_name_0_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="asda"
                android:textColor="@color/white"
                android:textSize="10sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_team_position_name_0_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="asdasdsa"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_team_position_name_0_point_"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="VC"
                    android:background="@drawable/vc_select"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_team_position_name_0__point_"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:text="C"
                    android:background="@drawable/vc_select"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>